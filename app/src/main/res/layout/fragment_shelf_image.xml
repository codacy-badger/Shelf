<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chickenmumani.com.allshelf.Shelf_ImageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#dddddd"
            android:orientation="horizontal">

            <Button
                android:id="@+id/desk_deletebutton"
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:text="편집"
                android:layout_gravity="center" />

            <Spinner
                android:id="@+id/desk_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/desk_menubutton"
                android:layout_toRightOf="@+id/desk_deletebutton"></Spinner>

            <Button
                android:id="@+id/desk_menubutton"
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/desk_homebutton" />

            <Button
                android:id="@+id/desk_homebutton"
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:id="@+id/desk_searchbutton"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true" />

            <EditText
                android:id="@+id/desk_searchedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/desk_searchbutton"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridView
                android:id="@+id/book_shelf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3"
                android:horizontalSpacing="8dp"
                android:verticalSpacing="8dp"
                android:layout_margin="8dp">
            </GridView>

        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/shelf_addbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>