<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mainoutresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:text="not provided"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/mainButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="signupactivity"/>

                <Button
                    android:id="@+id/mainButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="alarmactivity"/>

                <Button
                    android:id="@+id/mainButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="logoutpopup" />



                <Button
                    android:id="@+id/mainButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="settingactivity"/>

                <Button
                    android:id="@+id/mainButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="exportactivity"/>

                <Button
                    android:id="@+id/mainButton6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="friendsmanageactivity"/>

                <Button
                    android:id="@+id/mainButton7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="messagepopactivity"/>

                <Button
                    android:id="@+id/mainButton8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="naviactivity"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>